<resources>
    <declare-styleable name="CenterTitleSideButtonBar">
        <!-- left button -->
        <attr name="hasLeftButton" format="boolean"/>

        <attr name="leftButtonId" format="reference"/>
        <attr name="leftButtonShownDefault" format="boolean"/>
        <attr name="leftButtonAsText" format="boolean"/>
        <attr name="leftButtonText" format="string"/>
        <attr name="leftButtonTextSize" format="dimension"/>
        <attr name="leftButtonTextColor" format="color"/>

        <attr name="leftButtonSrc" format="reference"/>
        <attr name="leftButtonBg" format="reference"/>


        <!-- right button -->
        <attr name="hasRightButton" format="boolean"/>

        <attr name="rightButtonId" format="reference"/>
        <attr name="rightButtonShownDefault" format="boolean"/>
        <attr name="rightButtonAsText" format="boolean"/>
        <attr name="rightButtonText" format="string"/>
        <attr name="rightButtonTextSize" format="dimension"/>
        <attr name="rightButtonTextColor" format="color"/>

        <attr name="rightButtonSrc" format="reference"/>
        <attr name="rightButtonBg" format="reference"/>

        <attr name="rightButtonAsSearchView" format="boolean"/>
        <attr name="rightButtonClickToSearch" format="boolean"/>
        <attr name="searchViewDefaultShown" format="boolean"/>
        <attr name="searchViewBg" format="reference"/>
        <attr name="searchViewHeight" format="dimension"/>
        <attr name="searchViewMarginLeft" format="dimension"/>
        <attr name="searchViewMarginRight" format="dimension"/>
        <attr name="closeSearchViewId" format="reference"/>
        <attr name="closeSearchViewText" format="string"/>
        <attr name="closeSearchViewTextSize" format="dimension"/>
        <attr name="closeSearchViewTextColor" format="color"/>

        <!-- title -->
        <attr name="hasTitle" format="boolean"/>
        <attr name="titleId" format="reference"/>
        <attr name="centerTitle" format="string"/>
        <attr name="centerTitleTextSize" format="dimension"/>
        <attr name="centerTitleTextColor" format="color"/>
        <attr name="centerTitleTextGravity" format="enum">
            <enum name="center" value="0"/>
            <enum name="left" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        <attr name="centerTitleEllipsize" format="enum">
            <enum name="start" value="0"/>
            <enum name="middle" value="1"/>
            <enum name="end" value="2"/>
            <enum name="marquee" value="3"/>
        </attr>


        <!-- divider -->
        <attr name="hasDivider" format="boolean"/>
        <attr name="dividerId" format="reference"/>
        <attr name="dividerHeight" format="dimension"/>
        <attr name="dividerColor" format="color"/>
    </declare-styleable>
</resources>